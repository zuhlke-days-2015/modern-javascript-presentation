web-slide(class="fullscreen-image" style={"background-image": "url('images/happy-dog.jpg')" }, data-transition="moveToLeft")
    pre(data-enter="1" is="lang-javascript").
        class Animal {
            constructor(name) {
                this.name = name;
            }
            sayName() {
                console.log('my name is: ' + this.name);
            }
        }
        
        class HappyDog extends Animal {
            constructor(name, age) {
                super(name);
                this.age = age;
            }
            myAge() {
                console.log('woof! ' + this.age);
            }
        }

        var daisy = new HappyDog('Daisy', 2);
        daisy.sayName();  // my name is: Daisy
        daisy.myAge();    // woof! 2
    
